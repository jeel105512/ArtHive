@model ArtHive.Models.Artwork

@{
    var imagePath = (Model != null && !string.IsNullOrEmpty(Model.Image)) ? "/images/artworks/" + Model.Image : "/images/default-image.jpg";
    var alt = (Model != null && !string.IsNullOrEmpty(Model.Image)) ? Model.Title : "Artwork Image";
}

<img src="@imagePath" id="photo-preview" class="img-thumbnail" alt="@alt" />

<script>
    function previewImage(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = (e) => {
                const imagePreview = document.querySelector("#photo-preview");
                imagePreview.src = e.target.result;
                imagePreview.style.display = "block";
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>